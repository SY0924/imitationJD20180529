<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rookie.imitationjd.view.activities.InfoActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/info_back"
        android:background="@drawable/back"/>
<LinearLayout
    android:id="@+id/info_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="商品详情"/>




        <ImageView
            android:layout_width="300dp"
            android:scaleType="fitXY"
            android:layout_height="200dp"
            android:id="@+id/info_img"
            android:src="@drawable/kind_grid"
            />



</LinearLayout>
    <LinearLayout
        android:layout_below="@+id/info_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="222"
            android:autoLink="all"
            android:id="@+id/info_more"
            android:textSize="20sp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:id="@+id/info_title"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/info_oldPrice"
                android:layout_weight="1"
                android:textColor="#f00"
                android:text="原价"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/info_price"
                android:layout_weight="1"
                android:text="优惠价"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/info_num"
                android:layout_weight="1"
                android:text="销量"/>

        </LinearLayout>
        


    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_add"
        android:background="#EFC532"
       android:layout_alignParentBottom="true"
        android:text="加入购物车"/>



</RelativeLayout>

